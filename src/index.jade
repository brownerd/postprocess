            var gulp = require('gulp');
            var sass = require('gulp-sass');
            var please = require('gulp-pleeease');

            gulp.task('css', function() {
              return gulp.src('./sass/main.scss')
                .pipe(sass())
                .pipe(please())
                .pipe(gulp.dest('./'));
            });
            gulp.task('default', ['css']);
            
